---
import Header from "../components/Header.astro";
import "@fontsource/fira-mono";
import "@fontsource-variable/inter";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- SEO -->
    <meta name="author" content="Josema Cruz" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="Web development, Software engineer, React.js, Astro framework, Next.js, HTML5, CSS3, JavaScript, Frontend development, UX, UI, Responsive design, SPAs, Component-based development, RESTful APIs, GraphQL, Redux, Recoil, Agile development, Git, Unit testing, CI/CD, TDD, Full-stack development, SEO, Asynchronous programming, SSR, PWAs"
    />
    <meta property="og:type" content="website" />
    <meta name="apple-mobile-web-app-title" content="Josema Cruz Portfolio" />
    <meta property="
      og:site_name" content="Josema Cruz Portfolio" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content="https://josemacruz.dev" />
    <link rel="sitemap" type="application/xml" href="/sitemap.xml" />

    <!-- SEP -->
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>

<style is:global>
  :root {
    ::-webkit-scrollbar-track {
      -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
      background-color: #f5f5f5;
    }

    ::-webkit-scrollbar {
      width: 6px;
      background-color: #f5f5f5;
    }

    ::-webkit-scrollbar-thumb {
      -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
      background-color: grey;
    }
  }

  html[data-theme="dark"] {
    --background: #27374d;
    --primary: #27455c;
    --secondary: #ffffff;
    --red: #ff0000;
    --black: #000000;
    --purple: #dfc4fe;
    --green: #00914c;
    --blue: #007fff;
    --chip-text: #7a0e27;
    --chip-background: #ee9f9f;
    --text-color: #ffffff;
  }

  html[data-theme="light"] {
    --background: #f0f0f0;
    --primary: #ffffff;
    --secondary: #000000;
    --red: #ff0000;
    --black: #000000;
    --purple: #dfc4fe;
    --green: #00914c;
    --blue: #007fff;
    --chip-text: #7a0e27;
    --chip-background: #ffe9da;
    --text-color: #000000;
  }

  body {
    background: var(--background);
    color: var(--secondary);
  }
</style>
