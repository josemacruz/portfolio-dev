---
import Chip from "./Chip.astro";
import KnowmadMood from "./KnowmadMood.astro";
---

<article>
  <header>
    <span>ACTUALIDAD</span>
    <div>
      <KnowmadMood />
      <h2>Knowmad mood</h2>
    </div>
  </header>
  <main>
    <p>
      I work as a front-end software engineer at <strong>Openbank</strong>, a
      leading digital bank in Europe. I develop and maintain web applications
      that offer a great user experience for the bank's customers.
    </p>
  </main>
  <footer>
    {
      [
        "ReactJS",
        "TypeScript",
        "CSS3",
        "Jest",
        "HTML5",
        "Accesibility",
        "JavaScript",
      ].map((item) => <Chip>{item}</Chip>)
    }
  </footer>
</article>

<style>
  article {
    margin: auto 1rem;
    color: var(--black);
    font-family: "Inter Variable", sans-serif;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  header {
    text-align: left;
  }

  span {
    background: linear-gradient(to left, #fac213 0%, #f77e21 50%, #d61c4e 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-size: 0.8rem;
    font-weight: 800;
  }

  header > div {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-weight: 800;
  }

  main {
    text-align: left;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 0.2rem;
  }
</style>
