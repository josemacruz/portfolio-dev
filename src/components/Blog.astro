---
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<div>
  <h1>TTCode.<span>dev</span></h1>
  <span set:html={i18n.BLOG_DESCRIPTION} />
</div>

<style>
  div {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-family: "Inter", sans-serif;
  }
  h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--secondary);
  }

  h1 span {
    font-size: 3rem;
    color: var(--variable);
  }

  span {
    font-size: 1rem;
    font-weight: bold;
    color: var(--secondary);
  }
</style>
