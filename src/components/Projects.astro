---
import { projects } from "@/data/projects";
import Chip from "./Chip.astro";

const { project } = Astro.props;
const currentProject = projects[project as keyof typeof projects];
---

<article class="card">
  <div
    class="card-image"
    style={`background-image: url(${currentProject.image})`}
  >
  </div>
  <div class="card-content">
    <h2 class="card-title">{currentProject.title}</h2>
    <p class="card-description">{currentProject.description}</p>
  </div>
  <div class="card-footer">
    {currentProject.tags.map((tech: string) => <Chip>{tech}</Chip>)}
  </div>
</article>

<style>
  .card {
    border-radius: 10px;
    overflow: hidden;
  }

  .card-image {
    width: 100%;
    height: 220px;
    background-size: cover;
    background-position: center;
  }

  .card-content {
    padding: 10px;
  }

  .card-title {
    margin: 0;
    font-size: 2em;
    color: var(--text-primary);
    font-weight: bold;
    font-family: "Inter Variable", sans-serif;
  }

  .card-description {
    font-size: 1em;
    color: var(--text-secondary);
    font-family: "Inter Variable", sans-serif;
  }

  .card-footer {
    margin-top: auto;
    font-family: "Inter Variable", sans-serif;
  }
</style>
