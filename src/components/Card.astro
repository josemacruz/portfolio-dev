---
import LinkIcon from "./LinkIcon.astro";
interface Props {
  backgroundColor: string;
  className: string;
  size: string;
}

const { backgroundColor, className, size } = Astro.props;
---

<section class={`card ${className} ${size}`}>
  <header><LinkIcon width={40} url="" /></header>
  <main><slot /></main>
</section>

<style define:vars={{ color: backgroundColor }}>
  section {
    display: flex;
    justify-content: flex-end;
    padding: 0.5rem;
  }

  header {
    position: absolute;
  }

  main {
    padding: 1rem;
    width: 100%;
    text-align: center;
  }
  .card {
    box-shadow: 0px 0px 15px 1px rgba(0, 0, 0, 0.33);
    border-radius: 20px;
    background-color: var(--color);
  }

  .item0 {
    grid-column: span 2;
    grid-row: span 2;
  }

  .item2 {
    grid-column: span 2;
    grid-row: span 2;
  }

  .item4 {
    grid-column: span 2;
  }

  .item5 {
    grid-column: span 2;
  }
</style>
