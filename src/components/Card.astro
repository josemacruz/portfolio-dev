---
import LinkIcon from "./LinkIcon.astro";
interface Props {
  backgroundColor: string;
  className: string;
  urlType?: string;
  url?: string;
}

const { backgroundColor, className, url, urlType } = Astro.props;
---

<section class={`card ${className}`}>
  <div>
    {url && <LinkIcon width={40} url={url} className={urlType ?? ""} />}
  </div>
  <main><slot /></main>
</section>

<style define:vars={{ color: backgroundColor }}>
  section {
    display: flex;
    justify-content: flex-end;
    padding: 0.5rem;
    position: relative;
  }

  div {
    position: absolute;
  }

  main {
    padding: 1rem;
    width: 100%;
    text-align: center;
  }
  .card {
    box-shadow: 0px 0px 15px 1px rgba(0, 0, 0, 0.33);
    border-radius: 20px;
    background-color: var(--color);
  }

  .item0 {
    grid-column: span 2;
    grid-row: span 2;
  }

  .item2 {
    grid-column: span 2;
    grid-row: span 2;
  }

  .item4 {
    grid-column: span 2;
    grid-row: span 2;
  }

  .item6 {
    grid-column: span 2;
  }
</style>
